  </head>
  <body>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>

    <%- body -%>

    <script>
    $(document).ready(function () {
      $.getScript('//cdnjs.cloudflare.com/ajax/libs/jquery-backstretch/2.0.3/jquery.backstretch.min.js').done(function() {
        $(window).one('backstretch.show', function () {
          $(document).keyup(function(evt) {
            if (evt.keyCode !== 27) return true;
            $('body').toggleClass('wipe');
          });
          $('[rel=wipe]').on('click', function (evt) {
            evt.preventDefault();
            $('body').toggleClass('wipe');
          });
        });
        $.backstretch('<%- background %>');
      });
    });
    </script>
  </body>
</html>
